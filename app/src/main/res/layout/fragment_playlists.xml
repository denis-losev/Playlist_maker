<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_playlists"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/playlists_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/new_playlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:backgroundTint="?attr/blackRussianToWhite"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/createNewPlaylistText"
            android:textAllCaps="false"
            android:textColor="?attr/whiteToBlackRussian"
            android:visibility="visible"
            app:cornerRadius="54dp" />

        <ImageView
            android:id="@+id/playlists_error_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/error404emoji" />

        <TextView
            android:id="@+id/playlists_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/emptyPlaylistsText"
            android:textColor="?attr/blackRussianToWhite"
            android:textSize="19sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>