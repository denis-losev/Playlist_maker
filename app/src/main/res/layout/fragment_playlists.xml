<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_playlists"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/new_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/blackRussianToWhite"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/createNewPlaylistText"
        android:textAllCaps="false"
        android:textColor="?attr/whiteToBlackRussian"
        android:visibility="visible"
        app:cornerRadius="54dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:indeterminateTint="@color/dark_blue_color"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlists_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="4dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:paddingBottom="56dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />

    <LinearLayout
        android:id="@+id/playlists_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/playlists_error_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/error404emoji" />

        <TextView
            android:id="@+id/playlists_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/emptyPlaylistsText"
            android:textColor="?attr/blackRussianToWhite"
            android:textSize="19sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>