<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_favorites"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/favorites_error_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="106dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/favorites_error_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:srcCompat="@drawable/error404emoji" />

        <TextView
            android:id="@+id/favorites_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:padding="22sp"
            android:text="@string/emptyMediaText"
            android:textColor="?attr/blackRussianToWhite"
            android:textSize="19sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>