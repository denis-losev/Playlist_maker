<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/whiteToBlackRussian"
    android:layout_marginVertical="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/playlistCoverCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/aluminium_snow_color"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/playlistCoverImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_shape_rounded_8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_placeholder" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:textColor="?attr/blackRussianToWhite"
        android:textFontWeight="400"
        android:ellipsize="end"
        android:textSize="16sp"
        android:maxLines="1"
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/playlistCoverCard"
        app:layout_constraintBottom_toTopOf="@id/tracksCount"
        app:layout_constraintStart_toEndOf="@id/playlistCoverCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Playlist name"/>

    <com.google.android.material.textview.MaterialTextView
        android:textColor="?attr/trackSubtitleColor"
        android:textSize="12sp"
        android:id="@+id/tracksCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/playlistName"
        app:layout_constraintStart_toEndOf="@id/playlistCoverCard"
        app:layout_constraintBottom_toBottomOf="@id/playlistCoverCard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tracks count"/>

</androidx.constraintlayout.widget.ConstraintLayout>